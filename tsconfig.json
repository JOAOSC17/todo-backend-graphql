{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
  },
  "lib": ["es2015"],
  "include": ["src"],
}